{% extends "layouts/base.njk" %}

{% block head_css %}
    <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/katex@0.16.21/dist/katex.min.css"
        integrity="sha384-zh0CIslj+VczCZtlzBcjt5ppRcsAmDnRem7ESsYwWwg3m/OaJ2l4x7YBZl9Kxxib"
        crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/katex-mod.css" />
{% endblock %}

{% block head_extra %}
    {# Load D3 and KaTeX. Note KaTeX CSS is required! - Loaded above. #}
    <script type="importmap">
        {
            "imports": {
                "d3": "https://cdn.jsdelivr.net/npm/d3@7/+esm",
                "katex": "https://cdn.jsdelivr.net/npm/katex@0.16.22/dist/katex.mjs",
                "katex/contrib/auto-render": "https://cdn.jsdelivr.net/npm/katex@0.16.22/dist/contrib/auto-render.mjs"
            }
        }
    </script>

    {# KaTeX auto render hook - although we use markdown-it-katex, this
    catches any stragglers in e.g. html #}
    {# prettier-ignore-start #}
    <script type="module">
        import renderMathInElement from 'katex/contrib/auto-render';
        // Optional: Customize KaTeX auto-render delimiters if needed
        document.addEventListener('DOMContentLoaded', function () {
            renderMathInElement(document.body, {
                delimiters: [
                    {left: "$$", right: "$$", display: true},
                    {left: "$", right: "$", display: false},
                    {left: "\\(", right: "\\)", display: false},
                    {left: "\\begin{equation}", right: "\\end{equation}", display: true},
                    {left: "\\begin{align}", right: "\\end{align}", display: true},
                    {left: "\\begin{alignat}", right: "\\end{alignat}", display: true},
                    {left: "\\begin{gather}", right: "\\end{gather}", display: true},
                    {left: "\\begin{CD}", right: "\\end{CD}", display: true},
                    {left: "\\[", right: "\\]", display: true}
                ],
                throwOnError: false,
            });
        });
    </script>
    {# prettier-ignore-end #}
{% endblock %}

{% block content %}
    {% if 'esbd_topic' in tags %}
        {% set showPrevNextBottom = true %}
        {% if orderESBD != 1 %}
            {% set showPrevNextTop = true %}
        {% endif %}
    {% endif %}
    {% if showPrevNextTop or showPrevNextBottom %}
        {% set currentCollection = collections.esbd_topic %}
        {% set currentPageUrl = page.url %}
        {% set currentIndex = -1 %}
        {% set prevPage = null %}
        {% set nextPage = null %}

        {# Find index (corrected loop without break) #}
        {% for item in currentCollection %}
            {% if item.url == currentPageUrl %}
                {% set currentIndex = loop.index0 %}
            {% endif %}
        {% endfor %}

        {# Assign prev/next #}
        {% if currentIndex > 0 %}
            {% set prevPage = currentCollection[currentIndex - 1] %}
        {% endif %}
        {% if currentIndex >= 0 and currentIndex < currentCollection.length - 1 %}
            {% set nextPage = currentCollection[currentIndex + 1] %}
        {% endif %}
    {% endif %}

    {% if showPrevNextTop %}
        {# --- Previous/Next Navigation Bar --- #}
        <nav class="pagination-nav page-nav-top">
            {# Specific class for styling #}
            <div class="nav-prev">
                {% if prevPage %}
                    <a href="{{ prevPage.url | url }}"
                        >&lt;- {{ prevPage.data.title | escape }}</a
                    >
                {% else %}
                    <span>&nbsp;</span> {# Placeholder to maintain structure #}
                {% endif %}
            </div>
            <div class="nav-center">
                <a href="/esbd/topics">Topics</a>
            </div>
            <div class="nav-next">
                {% if nextPage %}
                    <a href="{{ nextPage.url | url }}"
                        >{{ nextPage.data.title | escape }} -&gt;</a
                    >
                {% else %}
                    <span>&nbsp;</span> {# Placeholder to maintain structure #}
                {% endif %}
            </div>
        </nav>
        {# End pagination-nav #}
    {% endif %}
    {# End conditional block for prev/next #}
    {# --- End Previous/Next Logic Block --- #}

    <main>
        {# Content from individual pages goes here #}
        {{ content | safe }}
    </main>

    {% if showPrevNextBottom %}
        {# --- Previous/Next Navigation Bar --- #}
        <nav class="pagination-nav page-nav-top">
            {# Specific class for styling #}
            <div class="nav-prev">
                {% if prevPage %}
                    <a href="{{ prevPage.url | url }}"
                        >&lt;- {{ prevPage.data.title | escape }}</a
                    >
                {% else %}
                    <span>&nbsp;</span> {# Placeholder to maintain structure #}
                {% endif %}
            </div>
            <div class="nav-center">
                <a href="/esbd/topics">Topics</a>
            </div>
            <div class="nav-next">
                {% if nextPage %}
                    <a href="{{ nextPage.url | url }}"
                        >{{ nextPage.data.title | escape }} -&gt;</a
                    >
                {% else %}
                    <span>&nbsp;</span> {# Placeholder to maintain structure #}
                {% endif %}
            </div>
        </nav>
        {# End pagination-nav #}
    {% endif %}
    {# showPrevNextBottom #}
{% endblock %}
